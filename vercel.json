{
    "version": 2,
    "buildCommand": "cd server && npm install",
    "functions": {
        "server/server.js": {
            "runtime": "@vercel/node@3"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/server.js"
        },
        {
            "src": "^/$",
            "dest": "/index.html"
        },
        {
            "src": "/(.*\\.html)",
            "dest": "/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/js/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/images/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}